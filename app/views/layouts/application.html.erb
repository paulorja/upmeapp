  <script src="https://cdn.jsdelivr.net/jquery.webui-popover/1.2.1/jquery.webui-popover.min.js"></script>
  
  
  <% if controller_name == "visitors" %>
    <body data-current-screen="<%= controller_name + '_' + action_name %>" data-turbolinks="false">
  <% else %>
    <body data-current-screen="<%= controller_name + '_' + action_name %>" data-turbolinks="false" class="app-body">
  <% end %>
      
  <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TG368D9" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
  <%- if controller_name == "visitors" %>
  <%= render partial: "layouts/flash_messages", flash: flash %>
  <% end %>
  
  <nav id='menu' class="menu-mobile">
    <div class='label-light'>Menu</div>
    <%- if controller_name == "visitors" %>
      <ul class='navbar-nav'>
        <li class='nav-item'>
          <a href="/precos" class='nav-link'>Pre√ßos</a>
        </li>
        <li class='nav-item'>
          <a href="/blog" class='nav-link'>Blog</a>
        </li>
        <li class='nav-item'>
          <a href="/entrar" class='nav-link'>Login</a>
        </li>
      </ul> 
    <% else %>
      <ul class='navbar-nav'>
          <li class="nav-item">
          <%= link_to explore_path, class: controller_name == 'explore' ? 'upme-nav-compass-active btn btn-default' : 'btn btn-default' do %>
              <% if sou_empresa? %>
                <i class="up-brieftcase"></i>
                Ofertas
              <% end %>
              <% if sou_professor? %>
                <i class="up-brieftcase"></i>
                  Demandas
              <% end %>
