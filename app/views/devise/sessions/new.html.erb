<%- @title = "Login" %>

<div class="upme-logo-container">
</div>
<h1 class="title text-center">Faça seu login</h1>
<br/>
<br/>
<%= render 'layouts/upme_flash' %>
<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 m-no-padding">
      <div class="card">
        <div class="card-body">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-field">
            <%= f.label :email, 'Seu e-mail', class: 'label' %>
            <%= f.email_field :email, class: 'validate form-control', placeholder: 'Digite seu e-mail aqui' %>
          </div>

          <div class="input-field">
            <%= f.label :password, 'Sua senha', class: 'label' %>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: '********'%>
          </div>
          <button type="submit" class="btn-primary btn-full-width">Fazer login</button>
        <% end %>
        <%=
        #render "devise/shared/links"
        %>
      </div>
      
      </div>
      <div class="row">
      <div class="col">
        <br>
          <%= link_to 'Faça seu cadastro', registrar_path, data: { turbolinks: false }, class: 'btn-default btn-small' %>
        </div>
        <div class="col">
          <br>
            <%= link_to 'Esqueci minha senha', new_password_path(resource_name), class: 'btn-default btn-small' %>
        </div>
      </div>
    </div>
  </div>
</div>


