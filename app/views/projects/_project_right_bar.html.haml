-# Modal Convide seu time

= render partial: '/projects/project_team'

- if @project.client_id != current_user.id
  .btn.btn-outline-secondary{data: {toggle: "modal", target: "#invitation-modal"}}
    %i.up-user-plus
    Convidar estudante

.modal.fade#invitation-modal
  = form_tag invite_user_to_project_path(@project.id), class: 'modal-dialog' do |f|
    .modal-content
      .modal-header
        .modal-title Convidar estudante
      .modal-body
        %p.text.mb-3 Digite o email de quem vocÃª quer convidar e ele vai receber um e-mail para fazer o cadastro e entrar no projeto.
        = text_field_tag :email, '', class: 'form-control', placeholder: 'E-mail'
      .modal-footer
        %a.btn-default{data: {dismiss: "modal"}} Cancelar
        %button.btn-primary{type: :submit} Convidar
